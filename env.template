# Application
PORT=3001
NODE_ENV=production

# MongoDB Configuration
MONGO_DB_VERSION=8.0
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your_secure_password_here
MONGO_INITDB_DATABASE=blog_db
MONGO_INITDB_HOST=mongo-blog
MONGO_INITDB_PORT=27017

# JWT Configuration
JWT_TOKEN_SECRET=your_jwt_secret_here_min_32_chars
JWT_TOKEN_EXPIRE=15m
JWT_REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_min_32_chars
JWT_REFRESH_TOKEN_EXPIRE=7d

# Rate Limiting (Throttling)
# Configurado en app.module.ts con valores:
# - Short: 3 requests por segundo
# - Medium: 20 requests por 10 segundos  
# - Long: 100 requests por minuto

